{
  "name": "chatseller-dashboard",
  "private": true,
  "version": "1.0.0",
  "description": "ChatSeller Dashboard - Vendeur IA pour e-commerce",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "clean": "rm -rf .nuxt dist node_modules/.cache",
    "reset": "npm run clean && npm install && npm run postinstall",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:mvp": "playwright test tests/integration/mvp-flow.test.ts",
    "test:mvp:ui": "playwright test tests/integration/mvp-flow.test.ts --ui",
    "test:mvp:debug": "playwright test tests/integration/mvp-flow.test.ts --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:setup": "npm run test:install && echo 'Playwright configuré avec succès !'",
    "test:health": "curl -s https://chatseller-api-production.up.railway.app/health | jq .",
    "test:quick": "npm run test:health && npm run test:mvp:ui"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@nuxt/image": "^1.3.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@stripe/stripe-js": "^7.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "@tailwindcss/forms": "^0.5.7",
    "@vueuse/core": "^10.11.1",
    "@vueuse/nuxt": "^10.11.1",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "pinia": "^2.1.7",
    "stripe": "^18.3.0",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1",
    "vue-chartjs": "^5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.2.0",
    "@nuxt/types": "^2.18.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.5.5",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcrypt": "^5.0.2",
    "@types/chart.js": "^2.9.41",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.9",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.54.0",
    "nuxt": "^3.8.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}